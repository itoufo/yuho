<%- include('layout', { body: `

<h1>ブランディング戦略</h1>

<div class="grid grid-2">
  ${branding.map(b => {
    const count = articleCounts.find(c => c.branding_type === b.code);
    return `
      <div class="card">
        <div class="card-header">
          <h2><span class="badge badge-${b.code}">${b.name}</span></h2>
          <span style="color: #666;">${count ? count.count : 0} 記事</span>
        </div>
        <p style="color: #888; margin-bottom: 15px;">${b.concept || ''}</p>
        <table>
          <tr><th style="width: 80px;">ターゲット</th><td>${b.target || '-'}</td></tr>
          <tr><th>トーン</th><td>${b.tone || '-'}</td></tr>
        </table>
        <div style="margin-top: 15px;">
          <a href="/articles?branding_type=${b.code}" class="btn btn-secondary btn-sm">この記事を見る</a>
          <a href="/articles/new?branding_type=${b.code}" class="btn btn-primary btn-sm">記事を追加</a>
        </div>
      </div>
    `;
  }).join('')}
</div>

` }) %>
