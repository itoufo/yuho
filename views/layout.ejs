    .badge-learning_theory { background: #16a34a20; color: #4ade80; }

    table { width: 100%; border-collapse: collapse; }
    th, td { padding: 12px; text-align: left; border-bottom: 1px solid #333; }
    th { color: #888; font-weight: normal; font-size: 0.85rem; }
    tr:hover { background: #222; }

    .form-group { margin-bottom: 15px; }
    .form-group label { display: block; margin-bottom: 5px; color: #888; font-size: 0.9rem; }
    .form-group input, .form-group select, .form-group textarea {
      width: 100%; padding: 10px; border: 1px solid #333; border-radius: 6px;
      background: #0f0f0f; color: #fff; font-size: 1rem;
    }
    .form-group input:focus, .form-group select:focus, .form-group textarea:focus {
      outline: none; border-color: #3b82f6;
    }

    .actions { display: flex; gap: 10px; }
    .empty { color: #666; text-align: center; padding: 40px; }
